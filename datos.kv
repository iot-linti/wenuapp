<GridLayout>:
    cols: 2
<ActionSpinner@Spinner+ActionItem>
    canvas.before:
        Color:
            rgba: 0.128, 0.128, 0.128, 1
        Rectangle:
            size: self.size
            pos: self.pos
    border: 27, 20, 12, 12




#:import win kivy.core.window
<Info>:
    screen_manager: screen_manager

    ScreenManager:
        id: screen_manager
        Screen:
            name: 'inicio'
            id: inicio
            BoxLayout:
                orientation: 'vertical'
                GridLayout:
                    Label:
                        text: 'Usuario:'
                        size_hint: (0.4, 1)
                        valign: 'bottom'

                    TextInput:
                        id: usuario
                        cursor_blink: True
                        hint_text: 'nombre'
                        text: 'lihuen'
                        multiline: False

                    Label:
                        text: u'Contraseña:'
                        size_hint: (0.4, 1)
                        valign: 'bottom'
                    TextInput:
                        id: password
                        cursor_blink: True
                        hint_text: u'contraseña'
                        text: '***REMOVED***'
                        password: True
                        multiline: False

                GridLayout:
                    Button:
                        id: conectar
                        text: 'Conectar'
                        background_color: (1.5, 1.0, 0.0, 1.0)
                        on_release: root.iniciar(inicio, "info")

                    Button:
                        text: 'Quit'
                        on_release: root.onBackBtn()

        Screen:

            name: 'info'
            id: ventinfo
            GridLayout:
                id: info_grid
                cols: 1
                rows: 3
                GridLayout:
					cols: 5
					spacing: 10
					size_hint_y: None
					height: 20
					Label:
						id: tiempo
						text: 'Tiempo'
						#background_color: (1.5, 1.0, 0.0, 1.0)
						size_hint: (0.4, .1)
						valign: 'bottom'
					Label:
						id: current
						text: 'Actual'
						#background_color: (1.5, 1.0, 0.0, 1.0)
						size_hint: (0.4, .1)
						valign: 'bottom'
					Label:
						id: mote_id
						text: 'Mota id'
						#background_color: (1.5, 1.0, 0.0, 1.0)
						size_hint: (0.4, .1)
						valign: 'bottom'
					Label:
						id: motion
						text: 'Movimiento'
						#background_color: (1.5, 1.0, 0.0, 1.0)
						size_hint: (0.4, .1)
						valign: 'bottom'
					Label:
						id: temperatura
						text: 'Temperatura'
						size_hint: (0.4, .1)
						valign: 'bottom'
				ScrollView:
					id: scroll_grid
					#size_hint_y: None
					#size: self.size
					size_hint: 1, 1
				Button:
					id: actualizar
					size_hint: .02,None
					height: 30
					text: 'Actualizar'
					on_press: root.actualizar()


